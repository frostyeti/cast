name: dotnet-test
description: Test a .NET project
inputs:
  CONFIGURATION:
    description: "Build configuration (Debug/Release)"
    required: false
  NO_RESTORE:
    description: "Disable restore during test"
    required: false
  NO_BUILD:
    description: "Disable build during test"
    required: false
  PROJECT:
    description: "Path to project file"
    default: "."
    required: false
  FILTER:
    description: "Test filter expression"
    required: false
  LOGGER:
    description: "Logger for test results (e.g. trx)"
    required: false
runs:
  using: deno
  main: main.ts
